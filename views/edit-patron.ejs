<%- include('navbar') %>
<body class="bg-gray-100 p-4">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold mb-4">Edit Patron</h1>
    <form action="/edit-patron/<%= patron._id %>" method="POST">
      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" id="name" name="Name" value="<%= patron.Name %>" required class="border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm">
      </div>
      <div class="mb-4">
        <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
        <input type="text" id="address" name="Address" value="<%= patron.Address %>" required class="border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm">
      </div>
      <div class="mb-4">
        <label for="contactInfo" class="block text-sm font-medium text-gray-700">Contact Info</label>
        <input type="text" id="contactInfo" name="ContactInfo" value="<%= patron.ContactInfo %>" required class="border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm">
      </div>
      <div class="mb-4">
        <label for="membershipID" class="block text-sm font-medium text-gray-700">Membership ID</label>
        <input type="text" id="membershipID" name="MembershipID" value="<%= patron.MembershipID %>" required class="border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm">
      </div>
      <div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md shadow-md">Save Changes</button>
      </div>
    </form>
  </div>
</body>
</html>
