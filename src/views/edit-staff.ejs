<%- include('navbar') %>
<body class="bg-gray-100 p-4">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">Edit Staff Member</h1>
    </div>
    <div class="bg-white overflow-hidden shadow-md sm:rounded-lg p-6">
      <form action="/api/edit-staff/<%= staffMember.StaffID %>" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 gap-6">
          <div>
            <label for="Name" class="block text-sm font-medium text-gray-700">Name</label>
            <input type="text" name="Name" id="Name" value="<%= staffMember.Name %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
          </div>
          <div>
            <label for="Position" class="block text-sm font-medium text-gray-700">Position</label>
            <input type="text" name="Position" id="Position" value="<%= staffMember.Position %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
          </div>
          <div>
            <label for="ContactInfo" class="block text-sm font-medium text-gray-700">Contact Info</label>
            <input type="text" name="ContactInfo" id="ContactInfo" value="<%= staffMember.ContactInfo %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
          </div>
        </div>
        <div class="flex justify-end">
          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md shadow-md">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
