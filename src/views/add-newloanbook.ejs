<%- include('navbar') %>
<body class="bg-gray-100 p-4">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold mb-4">Loan Book</h1>
    <form action="/api/add-loan" method="POST" class="space-y-4">
      <div>
        <label for="book" class="block text-sm font-medium text-gray-700">Book Title</label>
        <select id="book" name="BookID" required class="mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          <% books.forEach(book => { %>
            <option value="<%= book.BookID %>"><%= book.Title %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="patron" class="block text-sm font-medium text-gray-700">Patron Name</label>
        <select id="patron" name="PatronID" required class="mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          <% patrons.forEach(patron => { %>
            <option value="<%= patron.PatronID %>"><%= patron.Name %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="borrowDate" class="block text-sm font-medium text-gray-700">Borrow Date</label>
        <input type="date" id="borrowDate" name="BorrowDate" required class="mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>
      <div>
        <label for="returnDate" class="block text-sm font-medium text-gray-700">Return Date</label>
        <input type="date" id="returnDate" name="ReturnDate" required class="mt-1 block w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>
      <div class="flex justify-end">
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 focus:outline-none focus:bg-blue-500">Loan Book</button>
      </div>
    </form>
  </div>
</body>
</html>
